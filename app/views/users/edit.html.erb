<% provide :title, t(".title") %>
<% provide :button_text, t(".button_text") %>
<h1><%= t ".h1" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".gravatar"), t(".g_link"), target: t(".target") %>
    </div>
  </div>
</div>
